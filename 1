#include "shell.h"
/**
  * exec_line - function that launches and executes
  * the simple shell command line.
  * @args: an argument
  * Return: void
  */
void exec_line(char **args)
{
	pid_t child_pid = fork();
	
	switch (child_pid)
	{
		case -1:
			perror("hshell");
			exit(1);
			break;

		case 0:
			execvp(args[0], args);
			perror("hshell");
			exit(1);
			break;

		default:
			int status;
			do
			{
				waitpid(child_pid, &status, WUNTRACED);
			}
			while (!(WIFIEXITED(status)) && WIFISIGNALED(status));
			break;
	}
}
